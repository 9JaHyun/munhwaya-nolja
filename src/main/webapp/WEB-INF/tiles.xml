<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="template" template="/WEB-INF/views/layout/layout.jsp">
    <put-attribute name="title" value="final"/>
    <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
    <put-attribute name="body" value=""/>
    <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp"/>
  </definition>

  <definition name="infoTemplate" template="/WEB-INF/views/layout/layout.jsp">
    <put-attribute name="title" value="final"/>
    <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
    <put-attribute name="sidebar" value="/WEB-INF/views/layout/sidebar.jsp"/>
    <put-attribute name="body" value=""/>
    <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp"/>
  </definition>

  <definition name="member/*" extends="infoTemplate">
    <put-attribute name="body" value="/WEB-INF/views/member/{1}.jsp"/>
  </definition>

  <definition name="*/*" extends="template">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
  </definition>

</tiles-definitions>