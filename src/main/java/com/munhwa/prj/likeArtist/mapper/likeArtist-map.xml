<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.munhwa.prj.likeArtist.mapper.LikeArtistMapper">


  <resultMap type="com.munhwa.prj.likeArtist.vo.LikeArtistVO" id="likeArtistResultMap">
    <id property="memberId" column="member_id"/>
    <id property="artistId" column="artist_id"/>
    <result property="image" column="image"/>
    <result property="name" column="artist_name"/>
  </resultMap>

  <insert id="insertLikeArtist">
    INSERT INTO like_artist (member_id, artist_id)
    VALUES (#{memberId}, #{artistId})
  </insert>

  <!-- 좋아요 한 아티스트 리스트 -->
  <select id="likeArtistList" resultMap="likeArtistResultMap">
    SELECT a.name      AS artist_name,
           a.image     AS image,
           l.artist_id AS artist_id,
           l.member_id AS member_id
    FROM like_artist l
           JOIN artist a
                ON l.artist_id = a.id
    WHERE l.member_id = #{memberId}
    ORDER BY a.name ASC
  </select>

  <select id="selectMemberListByArtistId" resultType="java.lang.String">
    SELECT member_id
    FROM like_artist
    WHERE artist_id = #{artistId}
  </select>

  <!-- 좋아요 한 아티스트 삭제 -->
  <delete id="deleteLikeArtist" parameterType="com.munhwa.prj.likeArtist.vo.LikeArtistVO">
    DELETE
    FROM like_artist
    WHERE member_id = #{memberId}
      AND artist_id = #{artistId}
  </delete>

</mapper>
