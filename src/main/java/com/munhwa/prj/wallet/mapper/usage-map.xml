	<select id="getCountByUsageId" resultType="int">
  		<![CDATA[
  		select count(id)
  		from usage_history
  		where member_id = #{memberId}
  		]]>
  	</select>
  	
	<insert id="insertUsage" parameterType="com.munhwa.prj.wallet.vo.UsageVO">
			INSERT INTO USAGE_HISTORY
									(ID, 
									 MILEAGE, 
									 PLACE, 
									 MEMBER_ID,
									 USE_AT, 
									 PKS)
			VALUES(usage_history_seq.nextval, 
				   #{mileage},
				   #{place},
				   #{memberId},
				   #{useAt},
				   #{pks})
		</insert>
