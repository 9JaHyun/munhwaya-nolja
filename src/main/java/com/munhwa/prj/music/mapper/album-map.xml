<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.munhwa.prj.music.mapper.AlbumMapper">
	<resultMap type="com.munhwa.prj.music.vo.AlbumVO" id="albumResultMap">
		<id property="id" column="ID" />
		<result property="albName" column="ALB_NAME"/>
		<result property="artName" column="ALB_NAME"/>
		<result property="releaseAt" column="RELEASE_AT"/>
		<result property="genre" column="GENRE"/>
		<result property="content" column="CONTENT"/>
		<result property="picture" column="PICTURE"/>
		<result property="artistId" column="ARTIST_ID"/>
		<result property="score" column="SCORE"/>
		<result property="hit" column="HIT"/>
	</resultMap>
	
	<select id="albumSelectList" resultMap="albumResultMap">
		SELECT *
		FROM ALBUM
	</select>
	
	<select id="albumSelect" resultMap="albumResultMap">
		SELECT *
		FROM ALBUM
		WHERE ID = #{id}
	</select>
	
	<insert id="albumInsert" parameterType="com.munhwa.prj.music.vo.AlbumVO">
		INSERT INTO ALBUM
		VALUES(ALBUM_SEQ.NEXTVAL, 
			   #{albName}, 
			   #{artName}, 
			   #{releaseAt},
			   #{genre},
			   #{content},
			   #{picture},
			   #{artistId},
			   #{score},
			   #{hit}
			   )
	</insert>
	
	<update id="albumUpdate" parameterType="com.munhwa.prj.music.vo.AlbumVO">
		UPDATE ALBUM
	</update>
	
	<delete id="albumDelete" parameterType="com.munhwa.prj.music.vo.AlbumVO">
		DELETE FROM ALBUM
		WHERE ID = #{id}
	</delete>
	
</mapper>