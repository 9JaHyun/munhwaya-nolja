<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.munhwa.prj.music.service.AlbumMapper">
	<resultMap type="com.munhwa.prj.music.vo.AlbumVO" id="albumResultMap">
		<id property="id" column="id" />
		<result property="albName" column="#"/>
		<result property="artName" column="#"/>
		<result property="date" column="#"/>
		<result property="genre" column="#"/>
		<result property="content" column="#"/>
		<result property="picture" column="#"/>
		<result property="artId" column="#"/>
		<result property="score" column="#"/>
		<result property="hit" column="#"/>
	</resultMap>
	
	<select id="albumSelectList" resultMap="albumResultMap">
		SELECT *
		FROM ALBUM
	</select>
	
	<select id="albumSelect" resultMap="albumResultMap">
		SELECT *
		FROM ALBUM
		WHERE ID = #{id}
	</select>
	
	<insert id="albumInsert" parameterType="com.munhwa.prj.music.vo.AlbumVO">
		INSERT INTO ALBUM
		VALUES(ALBUM_SEQ.NEXTVAL, 
			   #{albName}, 
			   #{artName}, 
			   #{date},
			   #{genre},
			   #{content},
			   #{picture},
			   #{artId},
			   #{score},
			   #{hit}
			   )
	</insert>
	
	<update id="albumUpdate" parameterType="com.munhwa.prj.music.vo.AlbumVO">
		UPDATE ALBUM
	</update>
	
	<delete id="albumDelete" parameterType="com.munhwa.prj.music.vo.AlbumVO">
		DELETE FROM ALBUM
		WHERE ID = #{id}
	</delete>
	
</mapper>